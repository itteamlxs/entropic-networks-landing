# Activar rewrite desde la carpeta public/
RewriteEngine On
RewriteBase /

# Si el archivo o carpeta existe, servirlo directamente
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Pretty URLs /en /es /en/tour ...
RewriteRule ^(en|es)/?$ index.php?lang=$1 [QSA,L]
RewriteRule ^(en|es)/(tour|pricing|about|contact|blog|blog-single|404)/?$ $2.php?lang=$1 [QSA,L]

# Si no coincide, devolver 404 real
RewriteRule ^ - [L,R=404]
